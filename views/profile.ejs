<!DOCTYPE html>
<html lang="en">
    <!-- HEAD -->
    <%- include("./partials/head", {page_name:"Authorized User"})%>
<body>
  <!-- A grey horizontal navbar that becomes vertical on small screens -->
  <nav class="navbar navbar-expand-sm text-light justify-content-around bg-primary">
      <span class="px-2"><h2>CMS: Authorized User</h2></span>
      <ul class="navbar-nav">
          <li class="nav-item">
              <a class="nav-link text-light" href="/">Home</a>
          </li>
          <li class="nav-item">
              <a class="nav-link text-light" href="/users/logout">Log Out</a>
          </li>
      </ul>
  </nav>

  <!-- this user basic informations -->
  <div class="container mt-4">
    <div class="jumbotron">
      <h1><%= user_data.username %></h1>
      <img src="<%= typeof img_src != 'undefined' ? img_src : '/images/proflie.jpg' %>" class="rounded-circle p-4" alt="<%= typeof profile != 'undefined' ? profile : 'Image not loaded' %>" width="250" height="250">   
      <h4>user_authority: <%= JSON.stringify(authority) %> </h4>
      <h4>Email: <%= user_data.email %></h4>
      <h4>Entries: <%= entries %></h4>
    </div>
  </div>
  <!-- end of this user basic informations -->




  <!-- adding item -->
  <div class="container mt-4">
    <button id="addItemBtn" class="btn btn-success">Add an item</button>
    <script>
      $(()=>{
        $("#addItem").hide();
        $("#addItemBtn").click(()=>{
          $("#addItem").slideToggle();
        });
      });
    </script>
    <div class="jumbotron" id="addItem" class="">
        <h2>Add An Item</h2>
        <form action="/items/create" method="POST">

            <div class="form-group">
              <label for="title" class="badge badge-success">Title:</label>
              <input type="text" class="form-control" name='title'>
            </div>

            <div class="form-group">
              <label for="gender" class="badge badge-success">Gender:</label>
              <select name='gender' class="form-control">
                <option value="men">Men</option>
                <option value="women">Women</option>
                <option value="boys">Boys</option>
                <option value="girls">Girls</option>
              </select>
              
              <label for="size" class="badge badge-success">Size:</label>
              <select name='size' class="form-control">
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
                <option value="XL">XL</option>
                <option value="XLL">XXL</option>
              </select>
            </div>

            <div class="form-group">
                <label for="price" class="badge badge-success">Price:</label>
                <input type="number" class="form-control" name='price'>
            </div>

            <div class="form-group">
                <label for="color" class="badge badge-success">Color:</label>
                <input type="text" class="form-control" name='color'>
            </div>

            <div class="form-group">
              <label for="description" class="badge badge-success">description:</label>
              <textarea class="form-control" rows="5" name="description"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
          </form>
    </div>
  </div>
  <!-- end of adding item -->



  <!-- register an email -->
  <div class="container mt-4">
    <button id="registerUserBtn" class="btn btn-success">Register An User</button>
    <script>
      $(()=>{
        $("#registeruser").hide();
        $("#registerUserBtn").click(()=>{
          $("#registeruser").slideToggle();
        });
      });
    </script>
    <div class="jumbotron" id="registeruser" class="">
      <h2>Register An Email</h2>
      <form action="/users/create" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="img" class="badge badge-success">Profile Photo:</label>
          <input type="file" name="img" class="form-control-file border" >
        </div>
        <div class="form-group">
          <label for="username" class="badge badge-success">Username:</label>
          <input type="text" class="form-control" name="username" required>
        </div>
        <div class="form-group">
          <label for="pwd" class="badge badge-success">Email:</label>
          <input type="email" class="form-control" name="email" required>

        </div>
        <div class="form-group">
            <label for="password" class="badge badge-success">Password:</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <div class="form-group">
            <label for="passwordConfirm" class="badge badge-success">Confirm Password:</label>
            <input type="password" class="form-control" name="passwordConfirm" required>
          </div>
          <br>
        <!-- <% if(typeof message != 'undefined'){ %>
          <div><h4 class="alert"><%= message %></h4></div>
        <% } %> -->
        <div>
        </div>
        <button type="submit" class="btn btn-success">Register</button>
      </form>
    </div>
  </div>
  <!-- end of register an email -->



    <%- include("./partials/footer")%>
</body>
</html>