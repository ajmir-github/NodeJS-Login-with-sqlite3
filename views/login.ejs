<!DOCTYPE html>
<html lang="en">
    <!-- HEAD -->
    <%- include("./partials/head", {page_name:'Login'})%>
<body>
    <!-- A grey horizontal navbar that becomes vertical on small screens -->
    <nav class="navbar navbar-expand-sm text-light justify-content-around bg-primary">
        <span class="px-2"><h2>Login</h2></span>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-light" href="/" id="Home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="/login" id="Login">Login</a>
            </li>
        </ul>
  </nav>

  <div class="container mt-4">
    <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="pwd">Email:</label>
          <input type="email" class="form-control" placeholder="Enter email" name="email">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" placeholder="Enter password" name="password">
          </div>
          <br>
        <% if(typeof err != 'undefined'){ %>
          <div><h4 class="alert"><%= message %></h4></div>
        <% } %>
        <div>
        </div>
        <button type="submit" class="btn btn-success">Login</button>
      </form>
  </div>


<div class="container my-4">
    <%- include("./partials/footer")%>
</div>
</body>
</html>